<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/login">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.app.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_patientLoginFragment"
            app:destination="@id/patientLoginFragment" />
        <action
            android:id="@+id/action_loginFragment_to_doctorLoginFragment"
            app:destination="@id/doctorLoginFragment" />
    </fragment>

    <fragment
        android:id="@+id/patientLogin"
        android:name="com.example.dr_mitra.PatientLogin"
        android:label="fragment_patient_login"
        tools:layout="@layout/fragment_patient_login" />
    <fragment
        android:id="@+id/doctorLogin"
        android:name="com.example.dr_mitra.DoctorLogin"
        android:label="fragment_doctor_login"
        tools:layout="@layout/fragment_doctor_login" />


</navigation>