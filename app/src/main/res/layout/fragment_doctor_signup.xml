<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    tools:context=".doctor_login.DoctorSignup">



    

    <ImageView
        android:id="@+id/signup_doctor_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingStart="5dp"

        android:background="@drawable/login_edit_text_bg"
        android:contentDescription="this is a back button"
        android:scaleType="centerInside"
        android:src="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/signup_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Signup"
        android:textSize="40sp"
        android:layout_marginTop="40dp"
        android:textColor="@color/tv_color"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/signup_doctor_back"/>

    <TextView
        android:id="@+id/create_an_account_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create an Account to get Started"
        app:layout_constraintTop_toBottomOf="@id/signup_tv"/>
    <TextView
        android:id="@+id/tv_doctor_signup_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"

        android:layout_marginTop="10dp"

        android:textColor="@color/tv_color"
        android:textStyle="bold"

        app:layout_constraintTop_toBottomOf="@id/create_an_account_tv"/>
    <EditText
        android:id="@+id/doctor_signup_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="16dp"
        android:hint="Enter Your Name"
        android:background="@drawable/login_edit_text_bg"
        app:layout_constraintTop_toBottomOf="@id/tv_doctor_signup_name"/>
    <TextView
        android:id="@+id/tv_doctor_signup_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:textColor="@color/tv_color"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/doctor_signup_name"/>
    <EditText
        android:id="@+id/doctor_signup_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:hint="Enter Your Email Address"

        android:background="@drawable/login_edit_text_bg"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_doctor_signup_email"/>

    <TextView
        android:id="@+id/tv_doctor_signup_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"

        android:textColor="@color/tv_color"
        android:textStyle="bold"
        android:layout_marginTop="10dp"

        app:layout_constraintTop_toBottomOf="@id/doctor_signup_email"/>
    <EditText
        android:id="@+id/doctor_signup_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="16dp"
        android:hint="Enter Your Password"
        android:background="@drawable/login_edit_text_bg"
        app:layout_constraintTop_toBottomOf="@id/tv_doctor_signup_password"/>
    <TextView
        android:id="@+id/tv_doctor_signup_r_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medical Registration Number"

        android:textColor="@color/tv_color"
        android:textStyle="bold"

        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/doctor_signup_password"/>
    <EditText
        android:id="@+id/doctor_signup_register_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="16dp"
        android:hint="Enter Your Registration Number"
        android:background="@drawable/login_edit_text_bg"
        app:layout_constraintTop_toBottomOf="@id/tv_doctor_signup_r_number"/>
    <CheckBox
        android:id="@+id/doctor_signup_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/doctor_signup_register_number"/>

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="I've read and agree with the Terms and "
        app:layout_constraintStart_toEndOf="@+id/doctor_signup_checkbox"
        app:layout_constraintTop_toBottomOf="@id/doctor_signup_register_number" />
    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conditions and the Privacy Policy."
        app:layout_constraintStart_toEndOf="@+id/doctor_signup_checkbox"
        app:layout_constraintTop_toBottomOf="@id/tv3" />

    <com.google.android.material.button.MaterialButton
        style="@style/patient_buttonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/doctor_signup_checkbox"
        tools:layout_editor_absoluteX="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>