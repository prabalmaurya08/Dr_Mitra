<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".onboarding.Onboarding_Screen1"
    android:background="@drawable/onboarding1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:id="@+id/skip_button_onboarding1"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="457dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-20dp"
        app:cardBackgroundColor="#C3D9F5"
        app:cardCornerRadius="30dp"
        tools:ignore="MissingConstraints,TextSizeCheck,VisualLintBounds">

        <TextView
            android:id="@+id/text_top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:text="@string/your_health_is_our_priority"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="155dp"
            android:text="@string/book_appointments_easily_and_get_expert_care_at_your_convenience"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"

            />

        <ImageView
            android:id="@+id/frame_button_onboarding1"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="375dp"
            android:src="@drawable/onbording_buttons"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/next_button_onboarding1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="377dp"
            android:layout_marginEnd="35dp"
            android:text="@string/next"
            android:textSize="16sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>



</RelativeLayout>